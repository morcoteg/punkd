<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonStart"
        android:id="@+id/buttonStart"
        android:onClick="onStartGame"
        android:layout_below="@+id/spinnerGrid"
        android:layout_toRightOf="@+id/spalshView"
        android:layout_toEndOf="@+id/spalshView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGrid"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:ems="10"
        android:id="@+id/player1"
        android:inputType="text"
        android:layout_above="@+id/player2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/player2"
        android:ems="10"
        android:id="@+id/player2"
        android:layout_above="@+id/spinnerGrid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spalshView"
        android:src="@drawable/splash"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView7"
        android:layout_toLeftOf="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonHowTo"
        android:id="@+id/buttonHowTo"
        android:onClick="onHowTo"
        android:layout_below="@+id/buttonStart"
        android:layout_toRightOf="@+id/spalshView"
        android:layout_toEndOf="@+id/spalshView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/buttonReg"
        android:onClick="onRegister"
        android:layout_below="@+id/buttonStart"
        android:layout_alignLeft="@+id/checkBoxRemember"
        android:layout_alignStart="@+id/checkBoxRemember" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/player1"
        android:layout_toLeftOf="@+id/player1"
        android:layout_toStartOf="@+id/player1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/player2"
        android:layout_alignBottom="@+id/player2"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember"
        android:id="@+id/checkBoxRemember"
        android:layout_above="@+id/buttonReg"
        android:layout_toRightOf="@+id/buttonStart"
        android:layout_toEndOf="@+id/buttonStart" />
</RelativeLayout>
