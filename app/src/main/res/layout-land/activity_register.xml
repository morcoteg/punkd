<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.msu.hutteng3.fawfulsteampunked.Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/regUsername"
        android:layout_toLeftOf="@+id/regUsername"
        android:layout_toStartOf="@+id/regUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textView2"
        android:layout_below="@+id/regUsername"
        android:layout_toLeftOf="@+id/regUsername"
        android:layout_toStartOf="@+id/regUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_check"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/regPasswordCheck"
        android:layout_toLeftOf="@+id/regPasswordCheck"
        android:layout_toStartOf="@+id/regPasswordCheck" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regUsername"
        android:layout_alignRight="@+id/regPassword"
        android:layout_alignEnd="@+id/regPassword"
        android:layout_alignLeft="@+id/regPassword"
        android:layout_alignStart="@+id/regPassword"
        android:layout_above="@+id/regPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regPassword"
        android:layout_centerInParent="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regPasswordCheck"
        android:layout_below="@+id/regPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:id="@+id/buttonCreate"
        android:onClick="onCreateAccount"
        android:layout_below="@+id/regPasswordCheck"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
