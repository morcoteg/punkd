<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.msu.hutteng3.fawfulsteampunked.EndGame"
    android:background="@color/green">

    <edu.msu.hutteng3.fawfulsteampunked.EndGameView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/endGameView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonNewGame"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonNewGame"
        android:background="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonNewGame"
        android:id="@+id/buttonNewGame"
        android:onClick="onNewGame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true" />
</RelativeLayout>
