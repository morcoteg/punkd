<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.msu.hutteng3.fawfulsteampunked.Register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regUsername"
        android:hint="@string/username_hint"
        android:textSize="16dp"
        android:layout_above="@+id/regPasswordCheck"
        android:layout_alignLeft="@+id/buttonCreate"
        android:layout_alignStart="@+id/buttonCreate"
        android:layout_alignRight="@+id/buttonCreate"
        android:layout_alignEnd="@+id/buttonCreate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regPassword"
        android:layout_alignRight="@+id/regPasswordCheck"
        android:layout_alignEnd="@+id/regPasswordCheck"
        android:layout_alignLeft="@+id/regPasswordCheck"
        android:layout_alignStart="@+id/regPasswordCheck"
        android:hint="@string/password_hing"
        android:textSize="14dp"
        android:layout_centerVertical="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regPasswordCheck"
        android:hint="@string/password_repeat_hint"
        android:textSize="14dp"
        android:layout_above="@+id/regPassword"
        android:layout_alignRight="@+id/regUsername"
        android:layout_alignEnd="@+id/regUsername"
        android:layout_alignLeft="@+id/regUsername"
        android:layout_alignStart="@+id/regUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:id="@+id/buttonCreate"
        android:onClick="onCreateAccount"
        android:layout_below="@+id/regPassword"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
