<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonStart"
        android:id="@+id/buttonStart"
        android:onClick="onStartGame"
        android:layout_below="@+id/spinnerGrid"
        android:layout_alignLeft="@+id/spinnerGrid"
        android:layout_alignStart="@+id/spinnerGrid" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGrid"
        android:layout_below="@+id/player2"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2"
        android:layout_alignRight="@+id/player2"
        android:layout_alignEnd="@+id/player2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/player1"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/player2"
        android:layout_below="@+id/player1"
        android:layout_alignLeft="@+id/player1"
        android:layout_alignStart="@+id/player1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spalshView"
        android:src="@drawable/splash"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/player1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonHowTo"
        android:id="@+id/buttonHowTo"
        android:onClick="onHowTo"
        android:layout_below="@+id/buttonStart"
        android:layout_alignRight="@+id/spinnerGrid"
        android:layout_alignEnd="@+id/spinnerGrid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/buttonReg"
        android:layout_below="@+id/buttonStart"
        android:layout_alignLeft="@+id/buttonStart"
        android:layout_alignStart="@+id/buttonStart"
        android:onClick="onRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textView4"
        android:layout_below="@+id/player1"
        android:layout_toLeftOf="@+id/player1"
        android:layout_toStartOf="@+id/player1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/textView5"
        android:layout_above="@+id/player2"
        android:layout_toLeftOf="@+id/player1"
        android:layout_toStartOf="@+id/player1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember"
        android:id="@+id/checkBoxRemember"
        android:layout_above="@+id/buttonHowTo"
        android:layout_toRightOf="@+id/buttonStart"
        android:layout_toEndOf="@+id/buttonStart" />
</RelativeLayout>
